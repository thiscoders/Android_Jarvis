<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>    <!--主要用于工具栏颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item><!--主要用于状态栏颜色-->
        <item name="colorAccent">@color/colorAccent</item><!--主要用于强调色-->
        <item name="android:navigationBarColor" tools:targetApi="lollipop">
            @color/colorNavigationBar
        </item><!--导航栏颜色-->
        <!--<item name="android:statusBarColor" tools:targetApi="lollipop">#ffff11</item>--> <!--状态栏颜色-->
    </style>

    <!--每个Activity的主Title-->
    <style name="JTitleStyle">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@color/colorTitle</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--防盗页面的副标题-->
    <style name="JBurglarsSetupSubtitle">
        <item name="android:paddingTop">8dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>
    <!--防盗页面的每一个功能选项的标题-->
    <style name="JBurglarsSetupFunction">
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableLeft">@drawable/burglars_setup_func_icon6</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!--防盗页面服务运行结果显示-->
    <style name="JBurglarsServiceStatus">
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableLeft">@drawable/burglars_setup_func_icon1</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!--整个App界面的Button样式01-->
    <style name="JarvisButton01">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:background">@drawable/button_next_selector</item>
    </style>

    <!---->
    <style name="JarvisAddressLocation">
        <item name="android:clickable">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:textColor">@color/colorPhoneAddressLoaction</item>
        <item name="android:background">@drawable/button_location</item>
    </style>

    <!--高级工具条目-->
    <style name="JAdvanceToolsItem">
        <item name="android:drawableLeft">@drawable/advance_tools_item_icon</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:background">@drawable/advance_tools_item_selector</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <!--半透明窗口样式-->
    <style name="JTranslucentWindows" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>
