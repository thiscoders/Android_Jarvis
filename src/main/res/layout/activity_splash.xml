<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="ye.droid.jarvis.activity.SplashActivity">

    <RelativeLayout
        android:id="@+id/rl_up_screen"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:background="@color/colorSplashBack">

        <ImageView
            android:id="@+id/iv_app_icon"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:src="@drawable/bg_splash2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/splash_app_icon"
            android:textColor="@color/colorSplashText"
            android:textSize="80dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_server_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="test"
            android:paddingBottom="35dp"
            android:text="@string/app_name"
            android:textColor="@color/colorServerMessage"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_splash_version_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dp"
            android:text="@string/splash_version"
            android:textSize="15dp" />
    </RelativeLayout>

</RelativeLayout>
